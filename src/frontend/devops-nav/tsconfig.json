{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "jsx": "preserve",
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "allowJs": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "dom",
            "es2017",
            "ESNext"
        ],
        "baseUrl": ".",
        "types": [
            "node",
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "types/*": [
        "./src/types/*"
      ]
    },
    "typeRoots": [
      "types"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",
  ],
  "include": [
    "./src/**/*",
    ".eslintrc",
    "vite.config.ts",
    "global.d.ts",
    "env.d.ts",
    "declarations.d.ts"
  ]
}
{
  "$schema" : "http://json-schema.org/draft-07/schema",
  "$comment" : "https://iwiki.woa.com/pages/viewpage.action?pageId=686380000",
  "additionalProperties" : false,
  "required" : [ "stages" ],
  "properties" : {
    "parameters" : {
      "description" : "通过 parameters 关键字来实现参数的定义和传递，包含属性：name，type，default，values",
      "type" : "array",
      "items" : {
        "anyOf" : [ {
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "name", "type" ],
          "properties" : {
            "name" : {
              "description" : "参数名称",
              "type" : "string"
            },
            "type" : {
              "description" : "参数类型，支持：string，number，boolean，array",
              "enum" : [ "string", "number", "boolean", "array" ]
            },
            "default" : {
              "description" : "默认值",
              "anyOf" : [ {
                "type" : "string"
              }, {
                "type" : "number"
              }, {
                "type" : "boolean"
              }, {
                "type" : "array",
                "items" : {
                  "anyOf" : [ {
                    "type" : "string"
                  }, {
                    "type" : "number"
                  }, {
                    "type" : "boolean"
                  } ]
                }
              } ]
            },
            "values" : {
              "description" : "枚举值：当值可以枚举时，通过此属性将可选值枚举出来",
              "type" : "array",
              "items" : {
                "anyOf" : [ {
                  "type" : "string"
                }, {
                  "type" : "number"
                }, {
                  "type" : "boolean"
                } ]
              }
            }
          }
        }, {
          "description" : "模板引用，支持传入模板名称引用模板实例，模板实例按引用顺序插入",
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "template" ],
          "properties" : {
            "template" : {
              "description" : "模板名称",
              "type" : "string"
            }
          }
        } ]
      }
    },
    "version" : {
      "description" : "YAML 的版本，v2.0 为新语法第一版",
      "type" : "string",
      "const" : "v2.0"
    },
    "name" : {
      "description" : "pipeline 名称，缺省则设置为 YAML 文件相对于代码仓库根目录的路径",
      "type" : "string"
    },
    "stages" : {
      "description" : "定义一个或多个 stage，值格式为：Array[Stage] | Array[Template]，注：顶级关键字下，jobs，steps，stages，只能定义一个",
      "type" : "array",
      "items" : {
        "anyOf" : [ {
          "description" : "Stage实例",
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "jobs" ],
          "properties" : {
            "name" : {
              "description" : "stage 名称：缺省值为 stage-[stageNum]",
              "type" : "string"
            },
            "id" : {
              "description" : "stage id：当前 pipeline 下 stage 的唯一标识，用户可以自定义。当前 pipeline 下不能重复，缺省时系统自动生成 16 位随机ID",
              "type" : "string"
            },
            "label" : {
              "description" : "stage 标签：可以给当前stage设置一个或多个标签，值格式为 String|Array[String]，目前支持的标签为：Build、Test、Deploy、Approve",
              "anyOf" : [ {
                "enum" : [ "Build", "Test", "Deploy", "Approve" ]
              }, {
                "uniqueItems" : true,
                "type" : "array",
                "items" : {
                  "type" : "string",
                  "enum" : [ "Build", "Test", "Deploy", "Approve" ]
                }
              } ]
            },
            "if" : {
              "description" : "stage if：满足条件时才执行当前 stage，不满足时跳过不执行，支持条件表达式",
              "type" : "string"
            },
            "check-in" : {
              "description" : "stage 准入：在 stage 开始时判定，支持人工审核 以及 质量红线自动判定。详见 https://iwiki.woa.com/pages/viewpage.action?pageId=833350128",
              "$ref" : "#/definitions/check-in"
            },
            "check-out" : {
              "description" : "stage 准出：在stage 结束时判定，支持质量红线自动判定。详见 https://iwiki.woa.com/pages/viewpage.action?pageId=833350128",
              "$ref" : "#/definitions/check-out"
            },
            "fast-kill" : {
              "description" : "stage fast-kill：是否当 job失败时立即结束当前 stage",
              "type" : "boolean"
            },
            "jobs" : {
              "$ref" : "#/definitions/jobs"
            },
            "if-modify" : {
              "$ref" : "#/definitions/ifModify"
            }
          }
        }, {
          "description" : "模板引用，支持传入模板名称引用模板实例，模板实例按引用顺序插入",
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "template" ],
          "properties" : {
            "template" : {
              "description" : "模板名称",
              "type" : "string"
            },
            "parameters" : {
              "$ref" : "#/definitions/parameters"
            }
          }
        } ]
      }
    },
    "resources" : {
      "description" : "resources：引用远程资源，变量包含：repositories，pools",
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "repositories" : {
          "description" : "引用其他代码库下的模板：可以在单独的代码库里管理模板文件，然后在其他多个代码库下引用模板。详见：https://iwiki.woa.com/pages/viewpage.action?pageId=686380021#Stream%E6%A8%A1%E6%9D%BF-%E5%BC%95%E7%94%A8%E5%85%B6%E4%BB%96%E4%BB%A3%E7%A0%81%E5%BA%93%E4%B8%8B%E7%9A%84%E6%A8%A1%E6%9D%BF",
          "type" : "array",
          "items" : {
            "type" : "object",
            "required" : [ "repository", "name" ],
            "additionalProperties" : false,
            "properties" : {
              "repository" : {
                "description" : "模板库命名空间和名称 group/repo",
                "type" : "string"
              },
              "name" : {
                "description" : "yaml引用时使用的名称 使用 xxx@name 引用",
                "type" : "string"
              },
              "ref" : {
                "description" : "用来拉取模板的分支，缺省为默认分支",
                "type" : "string"
              },
              "credentials" : {
                "description" : "拉取模板的凭证，使用用户自定的 private-key，默认为开启CI的用户的OAuth",
                "type" : "object",
                "additionalProperties" : false,
                "required" : [ "personal-access-token" ],
                "properties" : {
                  "personal-access-token" : {
                    "description" : "用户自定的 private-key",
                    "type" : "string"
                  }
                }
              }
            }
          }
        },
        "pools" : {
          "description" : "引用第三方构建机池，详见：https://iwiki.woa.com/pages/viewpage.action?pageId=686380000#Stream%E5%AE%8C%E6%95%B4%E8%AF%AD%E6%B3%95-%E8%B7%A8%E5%B7%A5%E7%A8%8B%E5%BC%95%E7%94%A8%E7%AC%AC%E4%B8%89%E6%96%B9%E6%9E%84%E5%BB%BA%E8%B5%84%E6%BA%90%E6%B1%A0",
          "type" : "array",
          "items" : {
            "type" : "object",
            "required" : [ "from", "name" ],
            "additionalProperties" : false,
            "properties" : {
              "from" : {
                "description" : "语法和使用方方式，详见：https://iwiki.woa.com/pages/viewpage.action?pageId=914642753",
                "type" : "string"
              },
              "name" : {
                "description" : "pool-name 引用时使用的名字",
                "type" : "string"
              }
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "check-in" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "reviews" : {
          "description" : "人工审批流：支持flows，variables，description",
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "flows" ],
          "properties" : {
            "flows" : {
              "description" : "审批流，值格式为 Array[flow]，支持定义最多10个flow",
              "type" : "array",
              "maxItems" : 5,
              "items" : {
                "type" : "object",
                "additionalProperties" : false,
                "required" : [ "name", "reviewers" ],
                "properties" : {
                  "name" : {
                    "description" : "审批流名称",
                    "type" : "string"
                  },
                  "reviewers" : {
                    "description" : "审批人: 支持指定一个或多个审批人。当有多个审批人时，其中任意一位用户进行审核操作即可。",
                    "anyOf" : [ {
                      "type" : "string"
                    }, {
                      "type" : "array",
                      "items" : {
                        "type" : "string"
                      }
                    } ]
                  }
                }
              }
            },
            "variables" : {
              "description" : "审核变量：在下游步骤中通过 variables 上下文访问，值格式为 Object[var_name, variable]，key 为变量名",
              "type" : "object",
              "additionalProperties" : {
                "type" : "object",
                "additionalProperties" : false,
                "properties" : {
                  "label" : {
                    "description" : "变量中文名",
                    "type" : "string"
                  },
                  "type" : {
                    "description" : "字段类型，可选值有: INPUT，TEXTAREA，SELECTOR，SELECTOR-MULTIPLE，BOOL",
                    "enum" : [ "INPUT", "TEXTAREA", "SELECTOR", "SELECTOR-MULTIPLE", "BOOL" ]
                  },
                  "default" : {
                    "description" : "变量默认值",
                    "anyOf" : [ {
                      "type" : "string"
                    }, {
                      "type" : "number"
                    }, {
                      "type" : "boolean"
                    }, {
                      "type" : "array"
                    } ]
                  },
                  "values" : {
                    "description" : "变量指定为列表时的可选值",
                    "type" : "array",
                    "items" : {
                      "anyOf" : [ {
                        "type" : "string"
                      }, {
                        "type" : "number"
                      }, {
                        "type" : "boolean"
                      } ]
                    }
                  },
                  "description" : {
                    "description" : "字段描述",
                    "type" : "string"
                  }
                }
              }
            },
            "description" : {
              "description" : "审核说明。描述如何审核",
              "type" : "string"
            }
          }
        },
        "gates" : {
          "description" : "gates 用于定义质量红线，值为 Array，每个值定义一组规则，通过模板的方式引用红线，模板文件统一放置在 .ci/templates 目录下",
          "type" : "array",
          "items" : {
            "type" : "object",
            "additionalProperties" : false,
            "required" : [ "template" ],
            "properties" : {
              "template" : {
                "description" : "定义红线的模板名称",
                "type" : "string"
              },
              "parameters" : {
                "$ref" : "#/definitions/parameters"
              }
            }
          }
        },
        "timeout-hours" : {
          "description" : "准入/准出的超时时间，单位为小时（h）。默认 24h，取值范围为1~720 之间的整数",
          "minimum" : 1,
          "maximum" : 720,
          "type" : "integer"
        }
      }
    },
    "check-out" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "gates" : {
          "description" : "gates 用于定义质量红线，值为 Array，每个值定义一组规则，通过模板的方式引用红线，模板文件统一放置在 .ci/templates 目录下",
          "type" : "array",
          "items" : {
            "type" : "object",
            "additionalProperties" : false,
            "required" : [ "template" ],
            "properties" : {
              "template" : {
                "description" : "定义红线的模板名称",
                "type" : "string"
              },
              "parameters" : {
                "$ref" : "#/definitions/parameters"
              }
            }
          }
        },
        "timeout-hours" : {
          "description" : "准入/准出的超时时间，单位为小时（h）。默认 24h，取值范围为1~720 之间的整数",
          "minimum" : 1,
          "maximum" : 720,
          "type" : "integer"
        }
      }
    },
    "jobs" : {
      "description" : "定义一个或多个 job值格式为：Object[job_id, Job]， key 为 job id， value 为 job 相关配置",
      "type" : "object",
      "properties" : {
        "template" : {
          "$ref" : "#/definitions/template"
        }
      },
      "additionalProperties" : {
        "anyOf" : [ {
          "type" : "object",
          "required" : [ "steps" ],
          "additionalProperties" : false,
          "properties" : {
            "name" : {
              "description" : "job名称，缺省值为 job-<jobNum>",
              "type" : "string"
            },
            "runs-on" : {
              "description" : "配置当前 job 的构建环境 详情：https://iwiki.woa.com/pages/viewpage.action?pageId=686380000#Stream%E5%AE%8C%E6%95%B4%E8%AF%AD%E6%B3%95-runs-on",
              "anyOf" : [ {
                "description" : "公共构建资源池 支持docker，windows-xxx，macos-xx，agentless",
                "type" : "string"
              }, {
                "type" : "object",
                "additionalProperties" : false,
                "properties" : {
                  "pool-name" : {
                    "description" : "构建资源池",
                    "type" : "string"
                  },
                  "agent-selector" : {
                    "description" : "构建机类型：目前仅支持windows/linux/macos",
                    "type" : "array",
                    "items" : {
                      "type" : "string"
                    }
                  },
                  "container" : {
                    "description" : "docker容器设置：当 pool-name=docker 时生效，用于设置执行镜像，支持如下属性",
                    "type" : "object",
                    "additionalProperties" : false,
                    "properties" : {
                      "image" : {
                        "description" : "镜像地址，缺省为mirrors.tencent.com/ci/tlinux3_ci:1.2.2",
                        "type" : "string",
                        "pattern" : "\\S+:\\S+|\\$\\{\\{.*\\}\\}"
                      },
                      "credentials" : {
                        "description" : "拉取镜像的凭据：可以指定 凭据ID，或者指定 username + password",
                        "oneOf" : [ {
                          "type" : "object",
                          "additionalProperties" : false,
                          "required" : [ "username", "password" ],
                          "properties" : {
                            "username" : {
                              "description" : "用户名称",
                              "type" : "string"
                            },
                            "password" : {
                              "description" : "密码",
                              "type" : "string"
                            }
                          }
                        }, {
                          "description" : "凭据ID",
                          "type" : "string"
                        } ]
                      }
                    }
                  },
                  "needs" : {
                    "description" : "当使用linux公共构建机时（如pool-name=docker）有效，挂载第三方依赖到构建环境",
                    "$ref" : "#/definitions/buildEnv"
                  },
                  "self-hosted" : {
                    "description" : "是否为第三方构建机：缺省为 false， 当使用第三方构建资源池时，设置为 true",
                    "type" : "boolean"
                  },
                  "queue-timeout-minutes" : {
                    "description" : "配置任务排队超时时间 省却默认为10，单位：分钟",
                    "type" : "integer"
                  },
                  "workspace" : {
                    "description" : "当self-hosted=true时生效，用于指定工作空间，系统指定的工作空间会带上流水线ID等信息，比较长，在 windows 下，有可能会报路径超长。",
                    "type" : "string"
                  },
                  "xcode" : {
                    "description" : "xcode 版本",
                    "type" : "string"
                  }
                }
              } ]
            },
            "services" : {
              "description" : "job服务：申明构建时需要的服务，如 mysql、redis 。key 为 Service 的名称，值为 Service 属性定义",
              "type" : "object",
              "additionalProperties" : {
                "anyOf" : [ {
                  "type" : "object",
                  "properties" : {
                    "image" : {
                      "description" : "镜像。仅支持指定镜像，如：mysql:8.0.23",
                      "type" : "string"
                    },
                    "with" : {
                      "description" : "当启动mysql 服务时，支持如下属性: password",
                      "type" : "object",
                      "additionalProperties" : false,
                      "properties" : {
                        "password" : {
                          "type" : "string"
                        }
                      }
                    }
                  }
                } ]
              }
            },
            "if" : {
              "description" : "满足条件时才执行当前 job，不满足时跳过不执行，支持条件表达式",
              "type" : "string"
            },
            "steps" : {
              "description" : "定义一个或多个step，注：顶级关键字下，jobs，steps，stages，只能定义一个",
              "$ref" : "#/definitions/steps"
            },
            "timeout-minutes" : {
              "description" : "设置  job 的超时时间，单位为分钟，缺省值为 480 分钟 （8 小时），取值范围为 1~ 480 之间的整数",
              "type" : "integer",
              "minimum" : 1,
              "maximum" : 480
            },
            "env" : {
              "description" : "环境变量，当前 job 下生效，由大写字母和下划线组成，CI_ 为系统内置变量前缀，不建议自定义此前缀开头的环境变量 详情：https://iwiki.woa.com/pages/viewpage.action?pageId=686380000#Stream%E5%AE%8C%E6%95%B4%E8%AF%AD%E6%B3%95-env",
              "$ref" : "#/definitions/env"
            },
            "continue-on-error" : {
              "description" : "job失败时是否继续执行",
              "type" : "boolean"
            },
            "strategy" : {
              "description" : "job 运行的策略",
              "type" : "object",
              "additionalProperties" : false,
              "required" : [ "matrix" ],
              "properties" : {
                "matrix" : {
                  "description" : "定义的每个选项都有键和值，键将作为 matrix 上下文中的属性，详见：https://iwiki.woa.com/pages/viewpage.action?pageId=673540263",
                  "oneOf" : [ {
                    "type" : "object",
                    "additionalProperties" : {
                      "anyOf" : [ {
                        "type" : "array"
                      }, {
                        "type" : "string"
                      } ]
                    },
                    "properties" : {
                      "include" : {
                        "oneOf" : [ {
                          "description" : "用于给 matrix 的指定组合增加额外的属性，或者新增1个或多个组合每个元素为一个 Object",
                          "type" : "array",
                          "items" : {
                            "type" : "object",
                            "additionalProperties" : {
                              "anyOf" : [ {
                                "type" : "string"
                              }, {
                                "type" : "number"
                              }, {
                                "type" : "boolean"
                              } ]
                            }
                          }
                        }, {
                          "description" : "用于给 matrix 的指定组合增加额外的属性,限于${{fromJSON()}}的形式",
                          "type" : "string"
                        } ]
                      },
                      "exclude" : {
                        "oneOf" : [ {
                          "description" : "用于排除 matrix  中的一些组合 Object",
                          "type" : "array",
                          "items" : {
                            "type" : "object"
                          }
                        }, {
                          "description" : "用于排除 matrix  中的一些组合,限于${{fromJSON()}}的形式",
                          "type" : "string"
                        } ]
                      }
                    }
                  }, {
                    "type" : "string"
                  } ]
                },
                "fast-kill" : {
                  "description" : "当其中一个job失败时，是否立即结束所有job",
                  "type" : "boolean"
                },
                "max-parallel" : {
                  "description" : "允许的最大并发数，不超过 20",
                  "type" : "integer",
                  "minimum" : 0,
                  "maximum" : 20
                }
              }
            },
            "depend-on" : {
              "description" : "用于设置当前 stage 下的 job 的执行顺序。可以配置一个或多个 job id，当依赖的所有 job 执行完毕时，才执行当前 job，循环依赖时报错，依赖的 job 不支持由变量指定",
              "type" : "array",
              "items" : {
                "type" : "string"
              }
            },
            "if-modify" : {
              "$ref" : "#/definitions/ifModify"
            },
            "mutex" : {
              "$ref" : "#/definitions/resourceExclusiveDeclaration"
            }
          }
        } ]
      }
    },
    "steps" : {
      "description" : "定义一个或多个step",
      "type" : "array",
      "items" : {
        "anyOf" : [ {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "uses" : {
              "description" : "指定当前 step 使用的流水线插件标识和版本，值格式为：<atomCode>@<atomVersion>，<atomCode> 为插件标识，<atomVersion> 为插件对应的版本，支持设置始终使用指定大版本下的最新版本，如1.*，支持的插件有：从蓝盾研发商店上架的所有插件，不包括：蓝盾很早以前的旧版插件，这些插件目前已设置为不推荐使用人工审核：暂不支持",
              "type" : "string",
              "pattern" : "^.*@.*$"
            },
            "name" : {
              "description" : "step 的名称",
              "type" : "string"
            },
            "id" : {
              "description" : "当前 job 下 step 的唯一标识，用户可以自定义，当前 job 下不能重复，最大为64位",
              "type" : "string",
              "maxLength" : 64
            },
            "if" : {
              "description" : "满足条件时才执行当前 step，不满足时跳过不执行，支持条件表达式",
              "type" : "string"
            },

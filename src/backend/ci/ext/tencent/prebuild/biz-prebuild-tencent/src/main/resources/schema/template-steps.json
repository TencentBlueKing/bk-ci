{
  "$schema" : "http://json-schema.org/draft-07/schema",
  "$comment" : "https://iwiki.woa.com/pages/viewpage.action?pageId=686380000",
  "additionalProperties" : false,
  "required" : [ "steps" ],
  "properties" : {
    "parameters" : {
      "description" : "通过 parameters 关键字来实现参数的定义和传递，包含属性：name，type，default，values",
      "type" : "array",
      "items" : {
        "anyOf" : [ {
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "name", "type" ],
          "properties" : {
            "name" : {
              "description" : "参数名称",
              "type" : "string"
            },
            "type" : {
              "description" : "参数类型，支持：string，number，boolean，array",
              "enum" : [ "string", "number", "boolean", "array" ]
            },
            "default" : {
              "description" : "默认值",
              "anyOf" : [ {
                "type" : "string"
              }, {
                "type" : "number"
              }, {
                "type" : "boolean"
              }, {
                "type" : "array",
                "items" : {
                  "anyOf" : [ {
                    "type" : "string"
                  }, {
                    "type" : "number"
                  }, {
                    "type" : "boolean"
                  } ]
                }
              } ]
            },
            "values" : {
              "description" : "枚举值：当值可以枚举时，通过此属性将可选值枚举出来",
              "type" : "array",
              "items" : {
                "anyOf" : [ {
                  "type" : "string"
                }, {
                  "type" : "number"
                }, {
                  "type" : "boolean"
                } ]
              }
            }
          }
        }, {
          "description" : "模板引用，支持传入模板名称引用模板实例，模板实例按引用顺序插入",
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "template" ],
          "properties" : {
            "template" : {
              "description" : "模板名称",
              "type" : "string"
            }
          }
        } ]
      }
    },
    "version" : {
      "description" : "YAML 的版本，v2.0 为新语法第一版",
      "type" : "string",
      "const" : "v2.0"
    },
    "name" : {
      "description" : "pipeline 名称，缺省则设置为 YAML 文件相对于代码仓库根目录的路径",
      "type" : "string"
    },
    "steps" : {
      "description" : "定义一个或多个step，注：顶级关键字下，jobs，steps，stages，只能定义一个",
      "$ref" : "#/definitions/steps"
    },
    "resources" : {
      "description" : "resources：引用远程资源，变量包含：repositories，pools",
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "repositories" : {
          "description" : "引用其他代码库下的模板：可以在单独的代码库里管理模板文件，然后在其他多个代码库下引用模板。详见：https://iwiki.woa.com/pages/viewpage.action?pageId=686380021#Stream%E6%A8%A1%E6%9D%BF-%E5%BC%95%E7%94%A8%E5%85%B6%E4%BB%96%E4%BB%A3%E7%A0%81%E5%BA%93%E4%B8%8B%E7%9A%84%E6%A8%A1%E6%9D%BF",
          "type" : "array",
          "items" : {
            "type" : "object",
            "required" : [ "repository", "name" ],
            "additionalProperties" : false,
            "properties" : {
              "repository" : {
                "description" : "模板库命名空间和名称 group/repo",
                "type" : "string"
              },
              "name" : {
                "description" : "yaml引用时使用的名称 使用 xxx@name 引用",
                "type" : "string"
              },
              "ref" : {
                "description" : "用来拉取模板的分支，缺省为默认分支",
                "type" : "string"
              },
              "credentials" : {
                "description" : "拉取模板的凭证，使用用户自定的 private-key，默认为开启CI的用户的OAuth",
                "type" : "object",
                "additionalProperties" : false,
                "required" : [ "personal-access-token" ],
                "properties" : {
                  "personal-access-token" : {
                    "description" : "用户自定的 private-key",
                    "type" : "string"
                  }
                }
              }
            }
          }
        },
        "pools" : {
          "description" : "引用第三方构建机池，详见：https://iwiki.woa.com/pages/viewpage.action?pageId=686380000#Stream%E5%AE%8C%E6%95%B4%E8%AF%AD%E6%B3%95-%E8%B7%A8%E5%B7%A5%E7%A8%8B%E5%BC%95%E7%94%A8%E7%AC%AC%E4%B8%89%E6%96%B9%E6%9E%84%E5%BB%BA%E8%B5%84%E6%BA%90%E6%B1%A0",
          "type" : "array",
          "items" : {
            "type" : "object",
            "required" : [ "from", "name" ],
            "additionalProperties" : false,
            "properties" : {
              "from" : {
                "description" : "语法和使用方方式，详见：https://iwiki.woa.com/pages/viewpage.action?pageId=914642753",
                "type" : "string"
              },
              "name" : {
                "description" : "pool-name 引用时使用的名字",
                "type" : "string"
              }
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "steps" : {
      "description" : "定义一个或多个step",
      "type" : "array",
      "items" : {
        "anyOf" : [ {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "uses" : {
              "description" : "指定当前 step 使用的流水线插件标识和版本，值格式为：<atomCode>@<atomVersion>，<atomCode> 为插件标识，<atomVersion> 为插件对应的版本，支持设置始终使用指定大版本下的最新版本，如1.*，支持的插件有：从蓝盾研发商店上架的所有插件，不包括：蓝盾很早以前的旧版插件，这些插件目前已设置为不推荐使用人工审核：暂不支持",
              "type" : "string",
              "pattern" : "^.*@.*$"
            },
            "name" : {
              "description" : "step 的名称",
              "type" : "string"
            },
            "id" : {
              "description" : "当前 job 下 step 的唯一标识，用户可以自定义，当前 job 下不能重复，最大为64位",
              "type" : "string",
              "maxLength" : 64
            },
            "if" : {
              "description" : "满足条件时才执行当前 step，不满足时跳过不执行，支持条件表达式",
              "type" : "string"
            },
            "with" : {
              "description" : "当前插件的入参",
              "type" : "object"
            },
            "timeout-minutes" : {
              "description" : "设置 step 的超时时间，单位为分钟，缺省值为 480 分钟 （8 小时），取值范围为 1~ 480 之间的整数",
              "type" : "integer",
              "minimum" : 1,
              "maximum" : 480
            },
            "continue-on-error" : {
              "description" : "失败时是否继续执行",
              "type" : "boolean"
            },
            "retry-times" : {
              "description" : "失败时自动重试次数，缺省值为 0，表示不需要重试，取值范围为 1~10 之间的整数，重试间隔算法：round(1~重试次数)",
              "type" : "integer",
              "minimum" : 0,
              "maximum" : 180
            },
            "env" : {
              "description" : "环境变量，当前 step 下生效，优先级高于 job 级别的同名变量，由大写字母和下划线组成，BK_CI_ 为系统内置变量前缀，不允许自定义此前缀开头的环境变量",
              "$ref" : "#/definitions/env"
            },
            "run" : {
              "description" : "特殊属性，和 uses、checkout不共存，最常用的脚本插件，可以直接配置需要执行的单行或多行命令，当在类 linux 系统下时，使用 bash，当在 windows 系统下时，使用 cmd 或者 git 自带的命令行工具执行，预留自定义执行引擎的入口  shell 属性，后续可以支持 python、nodejs 等，如何设置输出参数见：https://iwiki.woa.com/pages/viewpage.action?pageId=686380000#Stream%E5%AE%8C%E6%95%B4%E8%AF%AD%E6%B3%95-%E5%A6%82%E4%BD%95%E8%AE%BE%E7%BD%AE%E8%BE%93%E5%87%BA%E5%8F%82%E6%95%B0",
              "type" : "string"
            },
            "checkout" : {
              "description" : "特殊属性，和 uses、run 不共存，拉取 git 代码插件，可以拉取工蜂当前库的代码，或拉取工蜂其他库的代码，也可以拉取 gitlab、github的代码，默认使用 开启CI 的用户的OAUTH权限拉取代码，语法为：checkout: self | repo url 详见：https://iwiki.woa.com/pages/viewpage.action?pageId=686380000#Stream%E5%AE%8C%E6%95%B4%E8%AF%AD%E6%B3%95-checkout",
              "type" : "string"
            },
            "if-modify" : {
              "$ref" : "#/definitions/ifModify"
            },
            "shell" : {
              "description" : "run 自定义引擎入口",
              "type" : "string"
            }
          },
          "allOf" : [ {
            "$comment" : "steps 中 uses、run、checkout 不共存",
            "description" : "steps 中 uses、run、checkout 不共存",
            "if" : {
              "required" : [ "uses" ]
            },
            "then" : {
              "description" : "不允许定义",
              "allOf" : [ {
                "not" : {
                  "required" : [ "run" ]
                }
              }, {
                "not" : {
                  "required" : [ "check" ]
                }
              } ]
            }
          }, {
            "$comment" : "steps 中 uses、run、checkout 不共存",
            "description" : "steps 中 uses、run、checkout 不共存",
            "if" : {
              "required" : [ "run" ]
            },
            "then" : {
              "description" : "不允许定义",
              "allOf" : [ {
                "not" : {
                  "required" : [ "uses" ]
                }
              }, {
                "not" : {
                  "required" : [ "check" ]
                }
              } ]
            }
          }, {
            "$comment" : "steps 中 uses、run、checkout 不共存",
            "description" : "steps 中 uses、run、checkout 不共存",
            "if" : {
              "required" : [ "checkout" ]
            },
            "then" : {
              "description" : "不允许定义",
              "allOf" : [ {
                "not" : {
                  "required" : [ "run" ]
                }
              }, {
                "not" : {
                  "required" : [ "uses" ]
                }
              } ]
            }
          } ]
        }, {
          "description" : "模板引用，支持传入模板名称引用模板实例，模板实例按引用顺序插入",
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "template" ],
          "properties" : {
            "template" : {
              "description" : "模板名称",
              "type" : "string"
            },
            "parameters" : {
              "$ref" : "#/definitions/parameters"
            }
          }
        } ]
      }
    },
    "env" : {
      "type" : "object",
      "maxProperties" : 100
    },
    "template" : {
      "description" : "模板引用，支持传入 array[string]|string 引用模板对象",
      "anyOf" : [ {
        "type" : "array",
        "items" : {
          "description" : "模板列表，name定义名称，parameters传递参数，按顺序依次插入模板实例",
          "type" : "object",
          "additionalProperties" : false,
          "required" : [ "name" ],
          "properties" : {
            "name" : {
              "description" : "模板名称",
              "type" : "string"
            },
            "parameters" : {
              "$ref" : "#/definitions/parameters"
            }
          }
        }
      }, {
        "description" : "模板名称",
        "type" : "string"
      } ]
    },
    "parameters" : {
      "description" : "模板引用入参，支持传入 key:value，用来替换模板中定义的parameters的同名key的value",
      "type" : "object",
      "additionalProperties" : {
        "anyOf" : [ {
          "type" : "string"
        }, {
          "type" : "number"
        }, {
          "type" : "boolean"
        }, {
          "type" : "array",
          "items" : {
            "type" : "string"
          }
        } ]
      }
    },
    "ifModify" : {
      "description" : "当指定文件变更时，才执行对应的stage/job/step，当不满足条件时，跳过stage/job/step，支持 glob 通配",
      "type" : "array",
      "items" : {
        "type" : "string"
      }
    }
  }
}